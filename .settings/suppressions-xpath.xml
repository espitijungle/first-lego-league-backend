<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">
<suppressions>
  <!-- Allow unnecessary parentheses for clarity in AND conditions nested inside ORs: (a && b) || (c && d) -->
  <suppress-xpath
    checks="UnnecessaryParentheses"
    query="
      //LOR[./LPAREN and ./LAND and ./RPAREN]/LPAREN
      | //LOR[./LPAREN and ./LAND and ./RPAREN]/LAND
      | //LOR[./LPAREN and ./LAND and ./RPAREN]
    "
  />
</suppressions>
